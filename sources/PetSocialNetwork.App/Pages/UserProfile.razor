@page "/userProfile"
@inject IUserProfileService _userProfileService;

<MudPaper Class="pa-4">
    <MudText Typo="Typo.h4" GutterBottom="true">User Profile</MudText>
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudText Typo="Typo.subtitle1">Фамилия</MudText>
            <MudText Typo="Typo.body1">@userProfile.FirstName</MudText>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudText Typo="Typo.subtitle1">Имя</MudText>
            <MudText Typo="Typo.body1">@userProfile.LastName</MudText>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudText Typo="Typo.subtitle1">Логин</MudText>
            <MudText Typo="Typo.body1">@userProfile.UserName</MudText>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudText Typo="Typo.subtitle1">Пол</MudText>
            <MudText Typo="Typo.body1">@userProfile.Gender.ToString()</MudText>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudText Typo="Typo.subtitle1">Профессия</MudText>
            <MudText Typo="Typo.body1">@userProfile.Profession</MudText>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudText Typo="Typo.subtitle1">Животное</MudText>
            <MudText Typo="Typo.body1">@userProfile.Animal</MudText>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudText Typo="Typo.subtitle1">Pet Пол</MudText>
            <MudText Typo="Typo.body1">@userProfile.PetGender.ToString()</MudText>
        </MudItem>
    </MudGrid>
</MudPaper>

@code {
    [Parameter]
    public long Id { get; set; } = 1234567890;

    private UserProfileViewModel userProfile = new UserProfileViewModel();

    protected override async Task OnInitializedAsync()
    {
        userProfile = await _userProfileService.GetUserProfileAsync(Id);
    }
}
